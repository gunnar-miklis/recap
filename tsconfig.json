{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowJs": true,
		"checkJs": true,
		
		"strict": true,
		"noEmit": true,
		"noImplicitAny": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		
		"rootDirs": ["src/"],
		"target": "ES2022",
		"outDir": "dist",
		"sourceMap": true,
		"removeComments": true,
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", ".yarn"],
	"compileOnSave": true
}
